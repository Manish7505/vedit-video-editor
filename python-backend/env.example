# Backend Configuration
PORT=8000
ENV=production

# Frontend URL (update with your Vercel/deployed frontend URL)
FRONTEND_URL=http://localhost:3000

# Database (Optional - MongoDB Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/vedit?retryWrites=true&w=majority

# File Storage (Optional)
MAX_FILE_SIZE=100MB
UPLOAD_DIR=uploads
PROCESSED_DIR=processed
TEMP_DIR=temp

# AI Configuration
WHISPER_MODEL=base  # Options: tiny, base, small, medium, large
AI_DEVICE=cpu  # Options: cpu, cuda

# CORS Settings
ALLOWED_ORIGINS=*  # Update with specific domains in production


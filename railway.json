{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "npm ci --omit=dev --no-audit --silent && npm run build:frontend && npm run build:server && node start-railway-fixed.cjs",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "NPM_CONFIG_LOGLEVEL": "error",
        "NPM_CONFIG_PROGRESS": "false",
        "NPM_CONFIG_AUDIT_LEVEL": "moderate"
      }
    }
  }
}

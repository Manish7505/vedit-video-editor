# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/vedit
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/vedit

# JWT Secret (for custom auth - will be replaced by Clerk)
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRE=7d

# Clerk Authentication
CLERK_SECRET_KEY=sk_test_your-clerk-secret-key

# File Upload
MAX_FILE_SIZE=100MB
UPLOAD_PATH=./uploads

# CORS
FRONTEND_URL=http://localhost:3003

# OpenRouter API
OPENROUTER_API_KEY=your-openrouter-api-key-here

# OpenRouter Model (optional - defaults to deepseek/deepseek-chat)
# Available models: deepseek/deepseek-chat, qwen/qwen-2.5-coder-7b-instruct, moonshot/moonshot-v1-8k, meta-llama/llama-3.1-8b-instruct
# Paid models: openai/gpt-4o-mini, openai/gpt-4o, anthropic/claude-3.5-sonnet
OPENROUTER_MODEL=deepseek/deepseek-chat

# Supabase removed (not used)

# Email Service (Optional)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Cloud Storage (Optional)
CLOUDINARY_CLOUD_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-cloudinary-key
CLOUDINARY_API_SECRET=your-cloudinary-secret